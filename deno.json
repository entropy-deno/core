{
  "compilerOptions": {
    "allowJs": false,
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "esnext",
      "deno.window"
    ],
    "noImplicitAny": true,
    "strict": true
  },
  "fmt": {
    "include": [
      "src/"
    ],
    "indentWidth": 2,
    "lineWidth": 85,
    "semiColons": true,
    "singleQuote": true
  },
  "imports": {
    "@std/": "https://deno.land/std@0.191.0/"
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "tasks": {
    "test": "deno test -A --no-check --parallel --watch",
    "test:cov": "deno test -A --coverage=coverage"
  }
}
