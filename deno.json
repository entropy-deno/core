{
  "compilerOptions": {
    "allowJs": false,
    "lib": [
      "deno.ns",
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "esnext"
    ],
    "strict": true
  },
  "fmt": {
    "include": [
      "src/",
      "*.md"
    ],
    "indentWidth": 2,
    "lineWidth": 85,
    "semiColons": true,
    "singleQuote": true
  },
  "lock": false,
  "tasks": {
    "bench": "deno bench -A",
    "test": "deno test -A --no-check --parallel",
    "test:cov": "deno test -A --coverage=coverage",
    "test:watch": "deno test -A --no-check --parallel --watch"
  }
}
