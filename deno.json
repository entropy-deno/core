{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "lib": [
      "ESNext",
      "DOM",
      "deno.window"
    ],
    "noImplicitAny": true,
    "strict": true
  },
  "fmt": {
    "include": [
      "src/"
    ],
    "indentWidth": 2,
    "lineWidth": 85,
    "semiColons": true,
    "singleQuote": true
  },
  "imports": {
    "@std/": "https://deno.land/std@0.190.0/"
  }
}
